@model CV_Applikation.Controllers.AccountController.ProfileModel

<div class="container2">
    
    <div class="profile-main">
        <div class="profile-container">
            <img src="" alt="coverPic" class="coverBildMyProfile">
            <div class="profile-container-inner">
                <div class="edit-button2">
                    <a href="/CV/PicturesUpdate">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                </div>
                <img src="@Model.theCV.ImagePath" alt="UserPic" class="profile-pic">
                <h1>@($"{Model.theUser.Namn} {Model.theUser.Efternamn}")</h1>
                <b>Användare sedan: @Model.theUser.RegistrationDate.ToString("dd/MM/yyyy")</b>
                <p style="margin-bottom: 0px">@Model.theUser.Adress</p>
                <p style="margin-bottom: 0px;margin-top: 0px;">@Model.theUser.Email</p>

            </div>
        </div>
    </div>
    
    <div class="profile-description">
        <div class="edit-button">
            <a href="/CV/ProfileUpdate">
                <i class="fa-solid fa-pen"></i>
            </a>
        </div>
        <h2>Profilsammanfattning</h2>
        <p>@Model.theCV.Beskrivning</p>
    </div>

    <div class="profile-description">
        <div class="edit-button">
            <a href="/CV/EducationUpdate">
                <i class="fa-solid fa-pen"></i>
            </a>
        </div>
        <h2>Utbildning</h2>
        <div class="profile-desc-row">
            <img src="~/src/skola.svg" alt="education">
            <div>
                <h3>@Model.theCV.Skola</h3>
                <b>@Model.theCV.Ämnesområde</b>
                <b>@Model.theCV.StartDatumSkola - @Model.theCV.SlutDatumSkola</b>
                <hr>
            </div>
        </div>
    </div>

    <div class="profile-description">
        <div class="edit-button">
            <a href="/CV/ExperienceUpdate">
                <i class="fa-solid fa-pen"></i>
            </a>
        </div>
        <h2>Erfarenhet</h2>

        @foreach (var item in Model.ErfarenhetsLista)
        {
        <div class="profile-desc-row">
            <img src="~/src/arbete.svg" alt="">
            <div>
                    <h3>@item.FöretagsNamn</h3>
                    <b>@item.Position</b>
                    <b>@item.StartDatum.ToString("dd/MM/yyyy") - @item.SlutDatum.ToString("dd/MM/yyyy") </b>
                <hr>
            </div>
        </div>
        }
    </div>

    <div class="profile-description">
        <div class="edit-button">
            <a href="/CV/ProjectsUpdate">
                <i class="fa-solid fa-pen"></i>
            </a>
        </div>
        <h2>Projekt</h2>

        @foreach (var item in Model.ProjektLista)
        {
            <div class="profile-desc-row">
                <img src="~/src/projekt.svg" alt="">
                <div>
                    <h3>@item.Titel</h3>
                    <b>@item.Beskrivning</b>
                    <b>@item.Startdatum.ToString("dd/MM/yyyy") - @item.Slutdatum.ToString("dd/MM/yyyy") </b>
                    <hr>
                </div>
            </div>
        }
    </div>

    
    <div class="profile-description">
        <div class="edit-button">
            <a href="/CV/SkillsUpdate">
                <i class="fa-solid fa-pen"></i>
            </a>
        </div>
        <h2>Kompetenser</h2>

        @foreach (var item in Model.KompetensLista)
        {
        <a class="skills-btn">@item.Namn</a>
        }
    </div>


</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        var imageUrls = [
            "/src/bakgrund1.png",
            "/src/bakgrund3.png",
            "/src/bakgrund4.png",
            "/src/bakgrund5.png",
            "/src/bakgrund6.png"
        ];

        var cards = document.querySelectorAll(".coverBildMyProfile");

        cards.forEach(function (card) {
            var randomIndex = Math.floor(Math.random() * imageUrls.length);
            var randomImageUrl = imageUrls[randomIndex];
            card.src = randomImageUrl;
        });

    });
</script>
