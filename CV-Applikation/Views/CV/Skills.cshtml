@model DataLager.Models.Kompetenser

<div class="container2">

    <h1>Kompetenser</h1>

    <form id="kompetensForm" asp-controller="CV" asp-action="AddToSkills" method="post">

        <div class="form-group">
            <label>Namn </label>
            <input class="form-control" asp-for="Namn" type="text" />
        </div>

        <input type="hidden" name="cvId" value="@ViewData["CvId"]" />
        <input id="läggTillButton" type="submit" value="Lägg till ny" class="btn btn-primary" />

    </form>



    <div id="skillsTableSection">
        <table class="table">
            <thead>
                <tr>
                    <td>Namn</td>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>


    <button id="nextButton" class="btn btn-primary">Nästa Sida</button>

</div>




<style>
    #experienceForm {
        margin-bottom: 50px;
    }

    #nextButton {
        margin-top: 15px;
    }

    #läggTillButton {
        margin-top: 15px;
    }

</style>


<!-- Include jQuery library -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<!-- Your existing HTML content -->
<!-- Script to handle form submission and update the table -->
<script>
    $(document).ready(function () {
        $('form').submit(function (e) {
            e.preventDefault(); // Prevent the default form submission

            // Serialize the form data
            var formData = $(this).serialize();

            // Send an AJAX request to the server
            $.ajax({
                type: 'POST',
                url: $(this).attr('action'),
                data: formData,
                success: function (data) {
                    // Replace the table body with the updated HTML
                    $('#skillsTableSection tbody').html(data);

                    // Optionally, clear the form fields
                    $('form')[0].reset();
                },
                error: function () {
                    // Handle errors if needed
                    console.error('Error submitting the form');
                }
            });
        });


        // Handle the click event for the next buttona
        $('#nextButton').click(function () {
            // Perform navigation to the next page
            window.location.href = '/CV/Projects'; // Replace '/NextPage' with the actual URL
        });


    });
</script>
