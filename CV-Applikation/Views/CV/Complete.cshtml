@model CV_Applikation.Controllers.CVController.ContactInfoViewModel

@if (!string.IsNullOrEmpty(ViewData["ImagePath"] as string))
{
    <img src="@ViewData["ImagePath"]" alt="User Image" class="cv-image">
}

<style>
    .cv-image {
        max-width: 200px; /* Adjust the maximum width as per your design */
        max-height: 200px; /* Adjust the maximum height as per your design */
        border-radius: 50%; /* Optional: Adds a rounded border for a circular effect */
        border: 2px solid #fff; /* Optional: Adds a white border */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Optional: Adds a subtle shadow */
    }
</style>
