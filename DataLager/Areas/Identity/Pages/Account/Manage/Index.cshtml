@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label">Användarnamn</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Namn" class="form-control" placeholder="Please enter your first name." />
                <label asp-for="Input.Namn" class="form-label"></label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Efternamn" class="form-control" placeholder="Please enter your last name." />
                <label asp-for="Input.Efternamn" class="form-label"></label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Adress" class="form-control" placeholder="Please enter your address." />
                <label asp-for="Input.Adress" class="form-label"></label>
            </div>


            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label">Telefonnummer</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Input.IsPrivateAccount" class="form-check-input" />
                <label asp-for="Input.IsPrivateAccount" class="form-check-label">Privatkonto?</label>
            </div>


            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Spara</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
